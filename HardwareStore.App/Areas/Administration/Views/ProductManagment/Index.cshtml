@using HardwareStore.App.Models.Product;
@model IEnumerable<ProductSimplifiedModel>;
<div class="row flex-column align-items-center">
    <div class="col-md-6 col-lg-4 col-xl-2 border border-black position-relative d-flex justify-content-center align-items-center">        
        <div class="position-absolute">
            <a class="text-decoration-none fs-1 text-center" asp-area="Administration" asp-controller="ProductManagment" asp-action="CreateProduct"><p class="p-3 bg-info text-warning bg-opacity-10 border border-info border-start-0 rounded-end">Add New</p></a>
        </div>
        <img alt="img" src="~/Images/Layout/OIG3.jpg" class="d-block w-100" />
    </div>
    <div class="col-md-6 col-lg-8 col-xl-10">
        <table class="text-center table table-striped">
            <thead>
                <tr>
                    <th scope="col">#Id</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>
                            <div class="d-flex justify-content-center align-content-center" style="height:50px;">
                                <img alt="img" src="@item.Image" class="img-fluid" style="max-height:50px;" />
                            </div>
                        </td>
                        <td>@item.Name</td>

                        <td>@item.Price</td>
                        <td>
                            <a asp-area="Administration" asp-controller="ProductManagment" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-outline-info">Edit</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>