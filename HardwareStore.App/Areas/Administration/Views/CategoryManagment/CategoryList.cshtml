@model List<CategoryViewModel>
<div class="row">
    <div class="col-md-8 mx-auto">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Category Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in this.Model)
                {
                    <tr data-categoryInfo>
                        <th data-catid="@item.Id" scope="row">@item.Id</th>
                        <td data-itemName="@item.Name">@item.Name</td>
                        <td data-item-image="@item.Image" class="text-truncate">
                        </td>
                        <td>
                            <a href="categoryinfo/@item.Id" class="btn btn-outline-info">Edit</a>
                            <button class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    @{
        var errMessages = (List<string>)ViewData["ErrorMessages"];
    }
    <div class="col-md-8 mx-auto">
        @if (errMessages != null)
        {
            <div class="alert alert-danger">
                <ul class="list-unstyled">
                    @foreach (var error in errMessages)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-8 mx-auto d-flex justify-content-end">
        <button id="addCategoryBtn" class="btn btn-success">Add new Category</button>
    </div>
</div>
<div class="row">
    <div id="categoryFormDiv" class="col-md-8 mx-auto">
    </div>
</div>

@section Scripts {
    <script src="~/js/categoryCrud.js"></script>
}