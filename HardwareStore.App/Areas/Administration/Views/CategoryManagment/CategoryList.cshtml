@model List<CategoryViewModel>
<div class="row">
    <div class="col-md-8 mx-auto">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Category Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in this.Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>
                            @item.Image
                        </td>
                        <td>
                            <button class="btn btn-info">Edit</button>
                            <button class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-8 mx-auto d-flex justify-content-end">
        <button id="addCategoryBtn" class="btn btn-success">Add new Category</button>
    </div>
</div>
<div class="row">
    <div id="categoryFormDiv" class="col-md-8 mx-auto">
    </div>
</div>

@section Scripts{
    <script>

        let addCategoryBtn = document.querySelector('#addCategoryBtn');
        let categoryFormContainer = document.querySelector('#categoryFormDiv');
        addCategoryBtn.addEventListener('click', GetForm);

        async function GetForm() {
            categoryFormContainer.innerHTML = '';

            let url = `https://localhost:7082/Administration/CategoryManagment/createcategory`;
            let response = await fetch(url, {
                method: "GET"
            });
            let html = await response.text();

            const parser = new DOMParser();
            const doc = parser.parseFromString(html, 'text/html');
            const form = doc.querySelector('form');
            categoryFormContainer.appendChild(form);
        }

    </script>
}