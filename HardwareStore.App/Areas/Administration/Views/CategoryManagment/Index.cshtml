@model CategoryListingViewModel;
<div class="row mb-3 justify-content-center">
    <div class="col-md-6 col-lg-8 col-xl-10">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Category Id</th>
                    <th scope="col">Name</th>                    
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in this.Model.Categories)
                {
                    <tr data-categoryInfo>
                        <th data-catid="@item.Id" scope="row">@item.Id</th>
                        <td data-itemName="@item.Name">@item.Name</td>                        
                        <td>
                            <a asp-area="Administration" asp-action="CategoryInfo" asp-route-Id="@item.Id" class="btn btn-outline-info">Edit</a>
                            <button class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button data-bs-toggle="collapse" data-bs-target="#categoryFormRow" id="addCategoryBtn" class="btn btn-success">Add Category</button>
    </div>
</div>
<div class="collapse @ViewData["FormCollapse"] row" id="categoryFormRow">
    <div id="categoryFormDiv" class="col">
        <partial name="_CategoryCreateFormPartial" model="@Model.CreateCategoryInputModel" />
    </div>
</div>

