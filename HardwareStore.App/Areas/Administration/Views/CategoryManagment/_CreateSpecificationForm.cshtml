@model SpecificationCreateModel
<form id="specForm">
    <input type="hidden" asp-for="@Model.CategoryId" />
    <div class="form-group">
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
        <input class="form-control" asp-for="@Model.Name" placeholder="Name" />
    </div>
    <div class="form-group">
        <div class="form-check form-switch">
            <input asp-for="@Model.Filter" class="form-check-input" type="checkbox" role="switch">
            <label asp-for="@Model.Filter" class="form-check-label">Filter</label>
        </div>
        <div class="form-check">
            <input asp-for="@Model.InfoLevel" class="form-check-input" type="radio" value="Essential" checked>
            <label class="form-check-label">Essential</label>
        </div>
        <div class="form-check">
            <input asp-for="@Model.InfoLevel" class="form-check-input" type="radio" value="None">
            <label class="form-check-label">None</label>
        </div>
    </div>
    <button id="submitBtn" class="btn btn-outline-success">Submit</button>
</form>

