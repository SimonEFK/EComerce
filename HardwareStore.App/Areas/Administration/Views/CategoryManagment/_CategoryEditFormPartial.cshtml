@model CategoryEditModel
<form method="post" action="/Administration/CategoryManagment/EditCategory" class="col-md-4 me-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" asp-for="@Model.ImageFilePath" />
    <div class="mb-2">
        <div class="form-group mb-2">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <div class="input-group">
                <input disabled asp-for="@Model.Name" placeholder="Name" class="form-control" />
                <button data-edit type="button" class="btn btn-outline-info">Edit</button>
            </div>
        </div>
        <div class="form-group mb-2">
            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            <div class="input-group">
                <input disabled value="@Model.ImageUrl" asp-for="@Model.ImageUrl" class="form-control" placeholder="Add Url to Change category Image" />
                <button data-edit type="button" class="btn btn-outline-info">Edit</button>
            </div>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger col-form-label-sm"></div>
    <button id="cateEditSubmitBtn" class="btn btn-outline-success mt-1">Apply Changes</button>
</form>
<div class="col-md-2">
    @{
        var src = string.Empty;
        if (Model.ImageFilePath == null)
        {
            src = @Model.ImageUrl;
        }
        else
        {
            src = $"/{Model.ImageFilePath}";
        }
    }
    <img class="img-fluid" src="@src" />
</div>
