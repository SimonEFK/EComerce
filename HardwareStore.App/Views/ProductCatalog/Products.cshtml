@using HardwareStore.App.Models.ProductCatalog;
@model ProductCatalogModel

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-lg-6">
        <div class="row flex-column">
            <div class="col">
                @foreach (var product in this.Model.Products)
                {
                    <partial name="_ProductCardPartial" model="@product" />
                }
            </div>
            <div class="col">
                <ul id="pagination" class="pagination justify-content-center">

                    <li class="page-item"><a class="page-link" asp-route-page="@this.Model.Pagination.PreviousPageNumber" data-pageNumber="@this.Model.Pagination.PreviousPageNumber">Previous</a></li>

                    @for (int i = this.Model.Pagination.Page - 3; i < this.Model.Pagination.Page; i++)
                    {
                        if (i > 0)
                        {
                            <li class="page-item"><a class="page-link" asp-route-page="@i" data-pageNumber="@i">@i</a></li>
                        }
                    }
                    <li class="page-item active"><a class="page-link" asp-route-page="@this.Model.Pagination.Page" data-pageNumber="@this.Model.Pagination.Page">@this.Model.Pagination.Page</a></li>

                    @for (int i = this.Model.Pagination.Page + 1; i <= this.Model.Pagination.Page + 3; i++)
                    {
                        if (i <= this.Model.Pagination.PageSize)
                        {
                            <li class="page-item"><a class="page-link" asp-route-page="@i" data-pageNumber="@i">@i</a></li>
                        }
                    }
                    <li class="page-item"><a class="page-link" asp-route-page="@this.Model.Pagination.NextPageNumber" data-pageNumber="@this.Model.Pagination.NextPageNumber">Next</a></li>
                </ul>
            </div>

        </div>
    </div>

</div>
