@model List<ProductSimplifiedModel>;
@foreach (var item in Model)
{
    <li class="list-group-item">

        <div class="row">

            <div class="col-2">
                <img src="@item.Image" class="d-block w-100" />
            </div>
            <div class="col d-flex justify-content-between align-items-center gap-3">
                <a href="/ComponentDetail/@item.Id" class="text-decoration-none"><p class="m-0">@item.Name</p></a>
                <div class="row justify-content-end">
                    <div class="col">
                        <partial name="_ProductStarRatingPartial" model="@item.ProductReviewsRatingAvg" />
                    </div>
                    <div class="col">
                        <span>@item.Price</span>
                    </div>

                </div>
            </div>

        </div>
    </li>

}