@using HardwareStore.App.Models.Account;
@model UserRegisterFormModel;

<div class="row rowreg-form-wrapper justify-content-center">
    <div class="col-md-6 text-md-center">
        <span class="h3">Register</span>
        <form asp-controller="Account" asp-action="Register" method="post" class="d-flex flex-column row-gap-2">
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.UserName" class="form-control" placeholder="UserName">
                <label asp-for="@Model.UserName"></label>
            </div>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                <label asp-for="@Model.Email"></label>
            </div>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.Password" class="form-control" placeholder="Password" type="password">
                <label asp-for="@Model.Password"></label>
            </div>
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password">
                <label asp-for="@Model.ConfirmPassword"></label>
            </div>
            <button asp-controller="Account" asp-action="Register" type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <br />
    
</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
    }
