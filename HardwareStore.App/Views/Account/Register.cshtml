@using HardwareStore.App.Models.Account;
@model UserRegisterFormModel;

<div class="row reg-form-wrapper mx-auto">
    <div class="col-md-6">
        <h3>Register</h3>
        <form asp-controller="Account" asp-action="Register" method="post">
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.UserName" class="form-control" placeholder="UserName">
                <label asp-for="@Model.UserName"></label>
            </div>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                <label asp-for="@Model.Email"></label>
            </div>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.Password" class="form-control" placeholder="Password" type="password">
                <label asp-for="@Model.Password"></label>
            </div>
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password">
                <label asp-for="@Model.ConfirmPassword"></label>
            </div>
            <button asp-controller="Account" asp-action="Register" type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <br />
    @if (ViewBag.Message is not null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Message
        </div>
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

    }
</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
    }
