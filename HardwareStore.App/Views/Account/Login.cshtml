@using HardwareStore.App.Models.Account;
@model UserLoginFormModel;
<div class="row reg-form-wrapper mx-auto">
    <div class="col-md-6">
        <h3>Login</h3>
        <form asp-controller="Account" asp-action="Login" method="post">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                <label asp-for="@Model.Email"></label>
            </div>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="@Model.Password" class="form-control" placeholder="Password" type="password">
                <label asp-for="@Model.Password"></label>
            </div>
            <button asp-controller="Account" asp-action="Login" type="submit" class="btn btn-primary">Login</button>
        </form>
        <br />
        @if (ViewBag.Message is not null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.Message
            </div>
        }
    </div>
</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />

    }